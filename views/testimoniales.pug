extends ./layout/index

block contenido
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}

        blockquote.text-center Lee sobre nuestros clientes y sus experiencias en nuestros viajes
        include ./layout/bloque_testimoniales

        .row

            .col-md-12
                h2.d-block.w-100.text-center Agrega tu testimonio

                if(errores)
                    each error in errores 
                        .alerta.col.alert-danger.text-center= error.mensaje


            .row.justify-content-center.col
                .col-md-8 
                    form(action="/testimoniales", method="POST")
                        .form-group     
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="Tu nombre", name="nombre", class="form-control", value= nombre)  
                        .form-group     
                            label(for="correo") Correo
                            input#correo(type="text", placeholder="Tu Correo", name="correo", class="form-control", value= correo)  
                        .form-group     
                            label(for="mensaje") Mensaje
                            textarea(class="form-control", placeholder="Dinos tu experiencia", name="mensaje", rows= 3)= mensaje
                        
                        input.btn.btn-success.btn-block(type="submit")